%Articulos definidos:
articulo(["el"],["the"],m,s).
articulo(["al"],["the"],m,s).
articulo(["lo"],["the"],m,s).
articulo(["la"],["the"],f,s).
articulo(["los"],["the"],m,p).
articulo(["las"],["the"],f,p).




%Articulos indefinidos:
articulo(["un"],["a"],m,s).
articulo(["uno"],["one"],m,s).
articulo(["una"],["a"],f,s).
articulo(["un"],["an"],m,s).
articulo(["una"],["an"],f,s).
articulo(["un"],["an"],m,s).
articulo(["una"],["an"],f,s).




%Conjunciones
conj(["y"],["and"]).
conj(["o"],["or"]).
conj(["con"],["with"]).
conj(["de"],["of"]).



%Demostrativos
alg(["esto"],["this"],m,s).
alg(["estos"],["this"],f,p).
alg(["esta"],["these"],f,s).
alg(["estas"],["these"],f,p).




alg(["eso"],["that"],m,s).
alg(["esos"],["those"],m,p).
alg(["esa"],["that"],f,s).
alg(["esas"],["those"],f,p).




%Preguntas
preg(["que"],["what"]).
preg(["cual"],["which"]).
preg(["como"],["how"]).
preg(["donde"],["where"]).
preg(["cuando"],["when"]).
preg(["quien"],["who"]).








